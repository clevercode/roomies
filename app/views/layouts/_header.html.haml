%h1
  - unless user_signed_in?
    =link_to 'Roomies', root_path
  - else
    =link_to 'Roomies', '/corkboard'
%nav
  - if user_signed_in?
    %ul
      %li.profile
        = link_to image_tag(current_user.gravatar('small'), :width => 34, :height => 34), current_user
      %li
        = link_to '+ add assignment', new_assignment_path, :id => 'easy_button'
  - else
    = simple_form_for :user, :url => session_path(:user) do |f|
      = f.input :email, :label => false, :input_html => { :placeholder => "email" }
      = f.input :password, :label => false, :input_html => { :placeholder => "password" }
      = f.submit 'sign in'

