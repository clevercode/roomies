%h1
  - unless user_signed_in?
    =link_to 'Roomies', root_path
  - else
    =link_to 'Roomies', '/corkboard'
%nav
  - if user_signed_in?
    %ul
      %li.graphic.profile
        = link_to image_tag(current_user.gravatar('small')), current_user
      %li
        = link_to 'add task/expense', new_expense_path, :id => 'easy_button'
      %li.graphic
        = link_to ' ', destroy_user_session_path
  - else
    = semantic_form_for(:user, :url => session_path(:user)) do |f|
      = f.inputs do
        = f.input :email, :label => false, :input_html => { :value => "email" }
        = f.input :password, :label => false, :input_html => { :value => "password" }
      = f.buttons do
        = f.commit_button :label => 'sign in'

