= semantic_form_for @expense do |f|
  -if @expense.errors.any?
    #error_explanation
      %h2= "#{pluralize(@expense.errors.count, "error")} prohibited this expense from being saved:"
      %ul
        - @expense.errors.full_messages.each do |msg|
          %li= msg

  = f.inputs do
    = f.input :purpose   
    = f.input :due_date, :as => :date
    = f.input :cost
    = f.input :user_id, :as => :select, :collection => @users, :label => 'Assignee'
  = f.buttons
