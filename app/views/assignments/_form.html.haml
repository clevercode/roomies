= semantic_form_for @assignment do |f|
  -if @assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment.errors.count, "error")} prohibited this expense from being saved:"
      %ul
        - @assignment.errors.full_messages.each do |msg|
          %li= msg
 
  = f.inputs do
    = f.input :purpose   
    %ul
    - @roomies.all.each do |user|
      %li
        = user.name
        %input{ :type => "checkbox", :value => "#{user.id}" }
  = f.buttons

