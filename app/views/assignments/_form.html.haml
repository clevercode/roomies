= simple_form_for @assignment do |f|
  .little_guys
    = f.input :purpose, placeholder: 'What is this for?', autofocus: true, as: :text
    = f.input :assignee_names, required: true, label: 'Assignees', placeholder: 'Type Roomie\'s name here', input_html: {value: ''}
    = f.association :assignees, collection: roomies_list
  #picker
  = f.input   :due_date, placeholder: "Type (e.g. 'next friday') or select a date above.", input_html: { class: 'superdate', value: ((@assignment.due_date.blank?) ? '' : l(@assignment.due_date.to_date)) }, required: true
  -# .label.boolean.optional
  -#   = label_tag "repeating", "Will this repeat in the future?"
  -#   = check_box_tag "repeating", "yes", false, :value => "yes"
  -# .littler_guys
  -#   = f.input :frequency, :collection => %w{Daily Weekly Monthly}, :prompt => "Choose a frequency"
  -#   = f.input :duration, placeholder: 'Choose a number'
  -#   = f.input :duration_length, label: false, :collection => %w{Days Weeks Months Years Decades}, :prompt => "Choose a length of time"
  = f.input   :cost, :placeholder => "Enter the cost if there is one."
  = f.button  :submit, disable_with: "Please wait...", class: "green"