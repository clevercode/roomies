= simple_form_for :assignment do |f|
  -if @assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment.errors.count, "error")} prohibited this expense from being saved:"
      %ul
        - @assignment.errors.full_messages.each do |msg|
          %li= msg
 
  .inputs
    = f.input :purpose   
    -# = f.input :damn, :as => :text
    -# = f.input :recurring, :as => :boolean
    = f.input :category, :collection => ['Kitchen','Garden','Internet','Cleaning']
    %ul
    - @roomies.all.map do |user|
      %li
        = user.name
        %input{ :type => "checkbox", :value => "#{user }" }
  .buttons
    = f.button :submit

