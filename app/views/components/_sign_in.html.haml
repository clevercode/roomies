%section.sign-in-box
  %h1= t('.title')
  = simple_form_for :user, url: session_path(:user) do |f|
    = f.input :email, label: false, placeholder: t(:email)
    = f.input :password, label: false, placeholder: t(:password)
    = f.input :remember_me, as: :boolean
    = f.submit t(:lets_go)

  %p.auths 
    = t('.sign_in_using')
    =link_to 'twitter,', '/auth/twitter'
    =link_to 'facebook,', '/auth/facebook'
    = t :or
    =link_to 'google', '/auth/google'

  %p.forgot_password
    = link_to t(:forgot_password), new_password_path('user')
