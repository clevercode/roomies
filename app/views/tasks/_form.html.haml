= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .fields
    = f.label :purpose
    = f.text_field :purpose
  .fields
    = f.label :due_date
    = f.text_field :due_date, :class => 'superdate'
  #picker
  #popol
    =# f.datetime_select :due_date
  .fields
    = f.label :assignees
    = f.select :assignees, User.all.map { |u| [u, u._id] } 
  .actions
    = f.submit 'Save'

