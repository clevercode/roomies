.header_bar
  %h1 this month
#calendar.content  
  - today = Date.today.wday()
  - number_of_days = today == 0 ? 34 : 34 - today
  - if number_of_days != 34
    - (0..today).map do |i|
      - date = Date.today - today +i.days 
      - unless date == Date.today
        .day.past
          %p.day_name= Date::ABBR_DAYNAMES[date.wday()]
          %p= date.day
          #todo
            =link_to '0', '#', :class => "tasks"
            =link_to '0', '#', :class => "expenses"
  - (0..number_of_days).map do |i|
    - date = Date.today + i.days
    .day
      %p.day_name= Date::ABBR_DAYNAMES[date.wday()]
      %p= date.day
      #todo
        =link_to '99', '#', :class => "tasks"
        =link_to '2', '#', :class => "expenses"
