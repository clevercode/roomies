%h2 Sign up
= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!

  = f.inputs do
    = f.input :name
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
  = f.buttons do
    = f.commit_button :label => 'Sign up'

= render :partial => "devise/shared/links"
