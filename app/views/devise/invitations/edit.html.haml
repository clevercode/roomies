- @main_class = "pages"
%h1 Set your password
%p Welcome to Roomies, please choose a password and we'll take it from there.
= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f|
  = f.hidden_field :invitation_token
  = f.input :password, label: false, placeholder: t(:email_example)
  = f.submit t(:set_my_password, scope: [:devise, :invitations] ), class: "green"
